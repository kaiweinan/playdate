<h1>Welcome to the Playdate App!</h1>

<h1>Login</h1>
<br>
<div class=bg>
<%if @errors %>
  <h1> <%= @errors %> </h1>
<%end %>
<%= form_tag('/users', method: :post) do %>
  <div>
    <%= label_tag(:username, "Username") %>
    <%= text_field_tag :username %>
  </div>
  <div>
   <%= label_tag(:password, "Password") %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag("Login") %>
<% end %>
</div>




