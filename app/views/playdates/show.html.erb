<div class=background>
<h1><p class="text-center">
Playdate info
</p></h1>


<h2> 
<p class="text-center">
Title: <%= @playdate.title %><br>
 Date: <%= @playdate.playdate %><br>
 Vaccination: <%= @playdate.vaccination %> <br>
 Location: <%= @playdate.location %><br>
Personality: <%= @playdate.personality %>
</p>
</h2>

<h1>
<p class="text-center">
My playdate reviews</p></h1>
<h4>
<p class="text-center">

<% @playdate.reviews.each do |r| %>
   <br>
   <%= r.description %>
   <% if current_user == r.user %>
   
   <%= link_to "Edit", edit_playdate_review_path(@playdate, r)%>
   <%= link_to "Remove Review", playdate_review_path(@playdate, r), method: "delete"%>
   <% end %>
   <% end %>
   </p>
   </h4>
<br>
<br>
<p class="text-center">
<button type="button" class="btn btn-secondary">
<%= link_to "Create Review", new_playdate_review_path(@playdate)%>
</button>
<br>
<button type="button" class="btn btn-secondary">
<%= link_to "Remove Event", playdate_path(@playdate), method: "delete"%>
</button></p>
</div>